<?xml version="1.0" encoding="utf-8"?>
<config>

	<fieldset
		name="basic"
		label="COM_FAQBOOKPRO_CONFIG_GENERAL_SETTINGS_LABEL"
		description="COM_FAQBOOKPRO_CONFIG_GENERAL_SETTINGS_DESC"
		addfieldprefix="Joomla\Component\FAQBookPro\Administrator\Field"
	>

		<field
			name="pagination_limit"
			type="text"
			label="COM_FAQBOOKPRO_CONFIG_PAGINATION_LIMIT_LABEL"
			description="COM_FAQBOOKPRO_CONFIG_PAGINATION_LIMIT_DESC"
			default="20"
			filter="integer"
		/>

		<field
			name="fix_relative"
			type="radio"
			layout="joomla.form.field.radio.switcher"
			label="COM_FAQBOOKPRO_CONFIG_FIX_RELATIVE_LINKS_LABEL"
			description="COM_FAQBOOKPRO_CONFIG_FIX_RELATIVE_LINKS_DESC"
			default="0"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

	</fieldset>

	<fieldset
		name="advanced"
		label="COM_FAQBOOKPRO_CONFIG_ADVANCED_LABEL"
		description="COM_FAQBOOKPRO_CONFIG_ADVANCED_DESC"
	>

		<field
			name="load_bootstrap_css"
			type="radio"
			layout="joomla.form.field.radio.switcher"
			default="0"
			label="COM_FAQBOOKPRO_CONFIG_LOAD_BOOTSTRAP_CSS_LABEL"
			description="COM_FAQBOOKPRO_CONFIG_LOAD_BOOTSTRAP_CSS_DESC"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field
			name="load_jquery"
			type="radio"
			layout="joomla.form.field.radio.switcher"
			default="1"
			label="COM_FAQBOOKPRO_CONFIG_LOAD_JQUERY_LABEL"
			description="COM_FAQBOOKPRO_CONFIG_LOAD_JQUERY_DESC"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field
			name="load_fontawesome"
			type="radio"
			layout="joomla.form.field.radio.switcher"
			default="1"
			label="COM_FAQBOOKPRO_CONFIG_LOAD_FONTAWESOME_LABEL"
			description="COM_FAQBOOKPRO_CONFIG_LOAD_FONTAWESOME_DESC"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field
			name="version_check"
			type="radio"
			layout="joomla.form.field.radio.switcher"
			label="COM_FAQBOOKPRO_CONFIG_VERSION_CHECKING_LABEL"
			description="COM_FAQBOOKPRO_CONFIG_VERSION_CHECKING_DESC"
			default="1"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

	</fieldset>

	<fieldset
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC"
  >

		<field
		  name="rules"
		  type="rules"
		  label="JCONFIG_PERMISSIONS_LABEL"
		  class="inputbox"
		  validate="rules"
		  filter="rules"
		  component="com_faqbookpro"
		  section="component"
		 />

   </fieldset>

</config>
