<?xml version="1.0" encoding="utf-8"?>
<form>

	<fields name="filter" addfieldprefix="Joomla\Component\FAQBookPro\Administrator\Field">

		<field
			name="search"
			type="text"
			description="COM_FAQBOOKPRO_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>

		<field
			name="published"
			type="status"
			onchange="this.form.submit();"
		>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>

		<field
			name="topic_id"
			type="topicid"
			onchange="this.form.submit();"
			multiple="true"
			layout="joomla.form.field.list-fancy-select"
			published="0,1,2"
			hint="COM_FAQBOOKPRO_OPTION_SELECT_TOPIC"
		/>

		<field
			name="sectionid"
			type="faqbooksections"
			onchange="this.form.submit();"
			>
			<option value="">COM_FAQBOOKPRO_OPTION_SELECT_SECTION</option>
		</field>

		<field
			name="level"
			type="integer"
			first="1"
			last="10"
			step="1"
			label="JOPTION_FILTER_LEVEL"
			description="JOPTION_FILTER_LEVEL_DESC"
			languages="*"
			onchange="this.form.submit();"
		>
			<option value="">JOPTION_SELECT_MAX_LEVELS</option>
    </field>

		<field
			name="pinned"
			type="list"
			onchange="this.form.submit();"
		>
			<option value="">COM_FAQBOOKPRO_FIELD_OPTION_SELECT_PINNED</option>
			<option value="0">COM_FAQBOOKPRO_OPTION_NOT_PINNED</option>
			<option value="1">COM_FAQBOOKPRO_OPTION_PINNED</option>
		</field>

		<field
			name="access"
			type="accesslevel"
			multiple="true"
			layout="joomla.form.field.list-fancy-select"
			hint="JOPTION_SELECT_ACCESS"
			onchange="this.form.submit();"
		/>

	</fields>

	<fields name="list">

		<field
			name="fullordering"
			type="list"
			onchange="this.form.submit();"
			default="a.id DESC"
		>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.ordering ASC">JGRID_HEADING_ORDERING_ASC</option>
			<option value="a.ordering DESC">JGRID_HEADING_ORDERING_DESC</option>
			<option value="a.state ASC">JSTATUS_ASC</option>
			<option value="a.state DESC">JSTATUS_DESC</option>
			<option value="a.title ASC">JGLOBAL_TITLE_ASC</option>
			<option value="a.title DESC">JGLOBAL_TITLE_DESC</option>
			<option value="topic_title ASC">COM_FAQBOOKPRO_FILTER_OPTION_TOPIC_ASC</option>
			<option value="topic_title DESC">COM_FAQBOOKPRO_FILTER_OPTION_TOPIC_DESC</option>
			<option value="author_name ASC">JAUTHOR_ASC</option>
			<option value="author_name DESC">JAUTHOR_DESC</option>
			<option value="a.created ASC">JDATE_ASC</option>
			<option value="a.created DESC">JDATE_DESC</option>
			<option value="a.hits ASC">JGLOBAL_HITS_ASC</option>
			<option value="a.hits DESC">JGLOBAL_HITS_DESC</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>

		<field
			name="limit"
			type="limitbox"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			onchange="this.form.submit();"
		/>

	</fields>

</form>
